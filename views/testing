
this is from the dyes file working with series
router.get("/:id",function(req,res){
    db.query("SELECT series.id AS id,categories.name,categories.descr AS description,title,application,series.descr,categories.image_url FROM series INNER JOIN categories ON ? = series.cat_id;",[req.params.id],function(err,rows,fields){
        // db.query("SELECT * FROM categories ;",function(err,cat){
            console.log(rows);
            res.render("Dyes/showSeries",{series:rows,id:req.params.id});
        // });
        // console.log(rows);
        // notice that here you send 1 object containing all the retrieved data
    })
});
