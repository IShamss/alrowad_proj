<% include ../../partials/header %>

<!-- Page Header -->
<header class="masthead" style="background-image: url('https://images.unsplash.com/photo-1522753071498-f3137a65aee3?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80')">
    <div class="overlay"></div>
    <div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
        <div class="page-heading">
            <h1 class="display-4 font-weight-bold intrans"><%=machine.category%> Machine</h1>
        </div>
        </div>
    </div>
    </div>
</header>

<!-- Main Content -->
<div class="container sub_animation">
    <div class="row justify-content-center d-flex">
        <div class="col-md-11">
            <div class="thumbnail">
                <div class="caption-full">
                    <h2 style="padding-bottom:20px" class="my-3"><%=machine.title%></h2>
                </div>
                <img class="img-responsive m-auto d-flex rounded" src="<%=machine.image_url%>">
            </div>
            <hr>
            <h2 class="font-weight-light font-italic">Features:</h2>
            <p><%=machine.features%></p>     
        </div>
    </div>
</div>

<hr>

    <% include ../../partials/footer %>